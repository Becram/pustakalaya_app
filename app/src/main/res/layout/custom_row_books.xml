<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <LinearLayout
        android:background="@drawable/hover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        >
        <ImageView
            android:src="@drawable/book_not_available"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"

            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/imageViewCustomBook" />
        <LinearLayout
            android:layout_margin="4dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#0D8282"
                android:text="Large Text"
                android:id="@+id/bookListTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="12dp"
                    android:text="author :"
                    android:id="@+id/bookListAuthorTitle"
                    android:textColor="#f7000000"/>
                <TextView
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10dp"
                    android:text="-"
                    android:id="@+id/bookListAuthorName"
                    android:textColor="#8e8e8e"/>
            </LinearLayout>
            <!--watched-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10dp"
                    android:text="views :"
                    android:id="@+id/bookListViewsTitle"
                    android:textColor="#f7000000"/>
                <TextView
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10dp"
                    android:text="-"
                    android:id="@+id/bookListViewsNum"
                    android:textColor="#8e8e8e"/>
            </LinearLayout>
            <!--downloaded-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10dp"
                    android:text="downloads :"
                    android:id="@+id/bookListDownloadTitle"
                    android:textColor="#f7000000"/>
                <TextView
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10dp"
                    android:text="-"
                    android:id="@+id/bookListDownloadNum"
                    android:textColor="#8e8e8e"/>
            </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:src="@drawable/icon_next"/>
        </LinearLayout>



</LinearLayout>
