<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:id="@+id/textView_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_person_black_24dp"
            android:contentDescription="@string/thumbnail"
            android:layout_alignTop="@+id/textView2"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:paddingBottom="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/view"
            android:contentDescription="@string/thumbnail"
            android:layout_below="@+id/textView3"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:paddingBottom="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/language"
            android:contentDescription="@string/thumbnail"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:paddingBottom="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/count"
            android:contentDescription="@string/thumbnail"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7"
            android:paddingBottom="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/genre"
            android:contentDescription="@string/thumbnail"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_alignStart="@+id/imageView8"
            android:paddingBottom="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/publisher"
            android:contentDescription="@string/thumbnail"
            android:layout_below="@+id/textView5"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6"
            android:paddingBottom="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/reader"
            android:contentDescription="@string/thumbnail"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Author"
            android:id="@+id/textView2"
            android:padding="2dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView_title"
            android:layout_centerHorizontal="true"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Language"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Views"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Reader"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Publisher"
            android:singleLine="true"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Genre"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Chaptercount"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:padding="2dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/summary"
            android:id="@+id/textView9"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#227fb2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#c9c4c4"
            android:layout_below="@+id/textView8"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:contentPadding="5dp"
            card_view:cardBackgroundColor="#e2e1e1"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/textView_title"
            android:layout_alignStart="@+id/textView_title">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:id="@+id/image_cover"
                android:src="@drawable/thumbnailtest"
                android:layout_alignBottom="@+id/card_view"
                android:layout_alignLeft="@+id/card_view"
                android:layout_alignStart="@+id/card_view" />

        </android.support.v7.widget.CardView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_details"
            android:layout_gravity="center"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/auther_value"
            android:id="@+id/textView_author"
            android:padding="2dp"
            android:layout_above="@+id/textView_lanuage"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/language_values"
            android:id="@+id/textView_lanuage"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/textView_author"
            android:layout_alignStart="@+id/textView_author"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/views_values"
            android:id="@+id/textView_views"
            android:layout_above="@+id/textView_reader"
            android:layout_alignLeft="@+id/textView_lanuage"
            android:layout_alignStart="@+id/textView_lanuage"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/reader_values"
            android:id="@+id/textView_reader"
            android:padding="2dp"
            android:layout_above="@+id/textView_publisher"
            android:layout_alignLeft="@+id/textView_publisher"
            android:layout_alignStart="@+id/textView_publisher"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/publisher_values"
            android:id="@+id/textView_publisher"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/textView_views"
            android:layout_alignStart="@+id/textView_views"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/genre_values"
            android:id="@+id/textView_genre"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/textView_publisher"
            android:layout_alignStart="@+id/textView_publisher"
            android:padding="2dp"
            android:paddingBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/chaptercount_values"
            android:id="@+id/textView_Chap_count"
            android:padding="2dp"
            android:paddingBottom="10dp"
            android:layout_above="@+id/textView9"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:id="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView9"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summery_values"
                android:id="@+id/textView_description"
                android:padding="5dp" />
        </ScrollView>

    </RelativeLayout>



</LinearLayout>